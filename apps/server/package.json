		"@elysiajs/static": "^1.4.7",
		"@orpc/openapi": "catalog:",
		"@orpc/server": "catalog:",
		"@orpc/zod": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"elysia": "catalog:",
		"zod": "catalog:"
	},
	"trustedDependencies": [
		"supabase"
	],
	"devDependencies": {
		"@types/bun": "catalog:",
